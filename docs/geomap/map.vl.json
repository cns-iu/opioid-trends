{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "name": "Opioid Trends on the Indiana Map",
  "title": {
    "text": "Opioid Trends on the Indiana Map",
    "anchor": "middle",
    "fontSize": 28
  },
  "autosize": {
    "type": "pad",
    "resize": true
  },
  "data": {
    "url": "http://localhost:41121/data/geomap-data-row-based.csv",
    "format": {
      "type": "csv",
      "parse": {
        "PERIOD": "date",
        "VALUE": "number"
      }
    }
  },
  "transform": [
    {
      "lookup": "DATA_VARIABLE",
      "from": {
        "key": "DATA_VARIABLE",
        "fields": ["LEGEND_ORDER", "LABEL", "TYPE", "SCALE", "COLOR", "SCALING_FACTOR"],
        "data": {
          "url": "http://localhost:41121/data/data-variables.csv",
          "format": {
            "type": "csv",
            "parse": {
              "COLOR": "number",
              "SCALING_FACTOR": "number"
            }
          }
        }
      }
    },
    {
      "calculate": "toNumber(datum.COLOR)",
      "as": "COLOR"
    },
    {
      "calculate": "toNumber(datum.SCALING_FACTOR)",
      "as": "SCALING_FACTOR"
    },
    {
      "filter": "datum.TRACT_5 != '' && !!datum.VALUE && toString(datum.VALUE) != 'Infinity' && !!datum.LEGEND_ORDER"
    }
  ],
  
  "vconcat": [ 
    {
      "width": 300,
      "height": 220,
      "transform": [
        {
          "filter": {
            "and": [
              {"selection": "period"},
              {"selection": "data_variable"}
            ]
          }
        },
        {
          "joinaggregate": [{
            "op": "sum",
            "field": "VALUE",
            "as": "value"
          }],
          "groupby": [
            "LABEL", "TRACT_5"
          ]
        },
        {
          "lookup": "TRACT_5",
          "from": {
            "data": {
              "url": "http://localhost:41121/data/indiana.topojson",
              "format": {
                "type": "topojson",
                "feature": "counties"
              }
            },
            "key": "id"
          },
          "as": "geo"
        }
      ],
      "projection": {
        "type": "mercator"
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#fcfcfc"
      },
      "encoding": {
        "facet": {
          "field": "LABEL",
          "type": "nominal",
          "columns": 2,
          "title": " "
        },
        "shape": {
          "field": "geo",
          "type": "geojson"
        },
        "color": {
          "field": "value",
          "type": "quantitative",
          "title": "Value"
        },
        "tooltip": {
          "field": "LABEL",
          "type": "quantitative",
          "title": "Value"
        }
      },
      "resolve": {
        "scale": {
          "color": "independent"
        }
      }
    },
    {
      "width": 790,
      "height": 160,
      "layer": [
        {
          "mark": "line",
          "selection": {
            "period": {
              "type": "interval",
              "encodings": ["x"],
              "empty": "all"
            },
            "data_variable": {
              "type": "multi", 
              "fields": ["LABEL"],
              "bind": {"legend": "dblclick"},
              "init": [
                {"LABEL": "# who had opioid prescriptions"},
                {"LABEL": "# who had opioid overdoses"},
                {"LABEL": "# who had opioid misuse diagnosed"},
                {"LABEL": "# who had a substance use disorder diagnosis"}
              ]
            }
          }
        }
      ],
      "encoding": {
        "x": {
          "type": "temporal",
          "field": "PERIOD",
          "title": "Period"
        },
        "y": {
          "aggregate": "sum",
          "type": "quantitative",
          "field": "VALUE",
          "axis": {
            "grid": false,
            "title": "",
            "orient": "right",
            "titlePadding": 20
          }
        },
        "color": {
          "type": "nominal",
          "field": "LABEL",
          "scale": {
            "scheme": "category20"
          },
          "title": "Data Variable",
          "sort": {"field": "LEGEND_ORDER"}
        },
        "opacity": {
          "condition": {"selection": "data_variable", "value": 1},
          "value": 0.2
        }
      },
      "resolve": {
        "axis": {
          "x": "shared",
          "y": "independent"
        }
      }
    }
  ]
}
