{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 600,
  "height": 400,
  "data": {
    "url": "indiana.topojson",
    "format": {
      "type": "topojson",
      "feature": "counties"
    }
  },
  "transform": [
    {
      "lookup": "id",
      "from": {
        "data": {
          "url": "../data/geomap-data.csv"
        },
        "key": "TRACT_5",
        "fields": ["N_OPIOID_PRESCRIPTIONS", "PERIOD"]
      }
    }
  ],
  "projection": {
    "type": "mercator"
  },
  "mark": "geoshape",
  "encoding": {
    "color": {
      "field": "N_OPIOID_PRESCRIPTIONS",
      "type": "quantitative"
    }
  }
}
