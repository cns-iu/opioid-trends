{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "name": "Opioid Trends on the Indiana Map",
  "title": {
    "text": "Opioid Trends on the Indiana Map",
    "anchor": "middle",
    "fontSize": 28
  },
  "padding": 10,
  "autosize": {
    "type": "pad",
    "resize": true
  },
  "config": {
    "view": {"strokeOpacity": 0}
  },
  "data": {
    "url": "../data/geomap-data-row-based.csv",
    "format": {
      "type": "csv",
      "parse": {
        "PERIOD": "date",
        "VALUE": "number"
      }
    }
  },
  "transform": [
    {
      "lookup": "DATA_VARIABLE",
      "from": {
        "key": "DATA_VARIABLE",
        "fields": ["LEGEND_ORDER", "LABEL"],
        "data": {
          "url": "../data/data-variables.csv"
        }
      }
    },
    {
      "filter": "datum.TRACT_5 != '' && !!datum.VALUE && toString(datum.VALUE) != 'Infinity' && !!datum.LEGEND_ORDER"
    }
  ],
  "vconcat": [
    {
      "width": 250,
      "height": 250,
      "transform": [
        {"filter": {"selection": "data_variable"}},
        {"filter": {"selection": "period"}},
        {
          "aggregate": [{
            "op": "sum",
            "field": "VALUE",
            "as": "value"
          }],
          "groupby": [
            "LABEL", "TRACT_5"
          ]
        },
        {
          "lookup": "TRACT_5",
          "from": {
            "data": {
              "url": "../data/indiana.topojson",
              "format": {
                "type": "topojson",
                "feature": "counties"
              }
            },
            "key": "id"
          },
          "as": "geo"
        }
      ],
      "projection": {
        "type": "mercator"
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#fcfcfc"
      },
      "encoding": {
        "facet": {
          "field": "LABEL",
          "type": "nominal",
          "columns": 2,
          "title": " ",
          "header": {
            "labelAlign": "right",
            "labelAnchor": "end"
          }
        },
        "shape": {
          "field": "geo",
          "type": "geojson"
        },
        "color": {
          "field": "value",
          "type": "quantitative",
          "scale": {
            "type": "sqrt"
          },
          "title": "Value"
        },
        "tooltip": {
          "field": "LABEL",
          "type": "quantitative",
          "title": "Value"
        }
      },
      "resolve": {
        "scale": {
          "color": "independent"
        }
      }
    },
    {
      "width": 703,
      "height": 150,
      "view": {
        "strokeOpacity": 1
      },
      "layer": [
        {
          "mark": "line",
          "selection": {
            "period": {
              "type": "interval",
              "encodings": ["x"],
              "on": "[mousedown, window:mouseup] > window:mousemove{150, 300}"
            },
            "data_variable": {
              "type": "multi",
              "fields": ["LABEL"],
              "bind": {"legend": "dblclick"},
              "init": [
                {"LABEL": "# who had opioid prescriptions"},
                {"LABEL": "# who had opioid overdoses"},
                {"LABEL": "# who had opioid misuse diagnosed"},
                {"LABEL": "# who had a substance use disorder diagnosis"}
              ]
            }
          }
        }
      ],
      "encoding": {
        "x": {
          "type": "temporal",
          "field": "PERIOD",
          "title": null
        },
        "y": {
          "aggregate": "sum",
          "type": "quantitative",
          "field": "VALUE",
          "axis": {
            "title": null,
            "orient": "right",
            "tickCount": 6,
            "grid": false
          },
          "scale": {
            "type": "log"
          }
        },
        "color": {
          "type": "nominal",
          "field": "LABEL",
          "scale": {
            "scheme": "category20"
          },
          "title": "Data Variable",
          "sort": {"field": "LEGEND_ORDER"}
        },
        "opacity": {
          "condition": {"selection": "data_variable", "value": 1},
          "value": 0.1
        }
      },
      "resolve": {
        "axis": {
          "x": "shared",
          "y": "independent"
        }
      }
    }
  ]
}
